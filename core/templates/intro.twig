{% extends "manialink.twig" %}
{% block body %}
	<frame pos="-{{ size.width / 2 }} {{ size.height / 2 + pos.y }}" z-index="{{pos.z}}">
        <quad pos="0 0" z-index="1" size="{{size.width }} 6" bgcolor="{{colors.title_bg}}6" halign="left" valign="bottom"/>
        <label pos="2 3" z-index="2" size="{{size.width }} 4" text="$i{{title}}" textsize="2.5" valign="center2" textcolor="{{colors.title_fg}}" textfont="RobotoCondensedBold"/>

        <quad pos="0 0" z-index="3" size="{{size.width}} 0.4" bgcolor="{{colors.primary}}" opacity="1" valign="center" halign="left"/>	        

        <frame pos="0 -4" z-index="2">
            {% block content %} {% endblock %}
        </frame>
        <quad pos="0 0" z-index="1" size="{{size.width}} {{size.height}}" bgcolor="{{colors.window_bg}}e" />
        <quad pos="-0.5 6.5" z-index="0" size="{{size.width + 1}} {{size.height + 7}}" bgcolor="000b" />
        <quad />

        {% if data.page > 0 %}
            <label pos="10 -80" z-index="5" text="< previous" action="{{actions.prev}}" />
        {% endif %}

        {% if data.totalPages - 1 != data.page %}
            <label pos="150 -80" z-index="3" text="next >" halign="right" action="{{actions.next}}" />
        {% endif %}

        {% if data.page == data.totalPages - 1 %}
            <label pos="150 -80" z-index="3" text="close" halign="right" action="{{actions.close}}" />
        {% endif %}
    </frame>
{% endblock %}